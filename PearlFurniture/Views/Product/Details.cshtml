@model PearlFurniture.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-6">
            <img src="~/img/@Model.Image" alt="@Model.Name" class="img-fluid rounded" />
        </div>
        <div class="col-md-6">
            <h1 class="mb-3">@Model.Name</h1>
            <h4 class="text-primary mb-3">RM @Model.Price.ToString("N2")</h4>
            <p class="mb-4">@Model.Description</p>

            <a asp-controller="Review" asp-action="Create" asp-route-productId="@Model.Id" class="btn btn-success btn-lg">
                <i class="fa fa-credit-card me-2"></i> Buy Now
            </a>
            <a asp-controller="Review" asp-action="Review" asp-route-productId="@Model.Id" class="btn btn-outline-primary mt-3">
                View All Reviews
            </a>


        </div>
    </div>
</div>

