@{
    ViewData["Title"] = "Home";
}

<!-- PearlFurniture Product Grid -->
<div class="container py-5">
    <h1 class="mb-4 text-center">PearlFurniture</h1>

    <div class="d-flex justify-content-end mb-4">
        <div class="bg-light ps-3 py-3 rounded d-flex align-items-center">
            <label for="sortSelect" class="me-2 mb-0">Default Sorting:</label>
            <select id="sortSelect" class="form-select form-select-sm border-0 bg-light">
                <option value="none">Nothing</option>
                <option value="popularity">Popularity</option>
                <option value="luxury">Luxury</option>
                <option value="price">Price: Low to High</option>
            </select>
        </div>
    </div>

    <div class="row g-4 justify-content-center">
        <!-- Product Card 1 -->
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="rounded position-relative fruite-item h-100">
                <div class="fruite-img">
                    <img src="img/sofas.jpg" class="img-fluid w-100 rounded-top" alt="Sofa">
                </div>
                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">Sofas</div>
                <div class="p-4 border border-secondary border-top-0 rounded-bottom d-flex flex-column justify-content-between h-100">
                    <div>
                        <h4>Luxury Sofa Set</h4>
                        <p>Stylish and spacious sofa made for modern living spaces.</p>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <p class="text-dark fs-5 fw-bold mb-0">RM 1,999.00</p>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="1" class="btn border border-secondary rounded-pill px-3 text-primary">
                            <i class="fa fa-shopping-bag me-2 text-primary"></i> Buy
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Card 2 -->
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="rounded position-relative fruite-item h-100">
                <div class="fruite-img">
                    <img src="img/beds.jpg" class="img-fluid w-100 rounded-top" alt="Bed">
                </div>
                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">Beds</div>
                <div class="p-4 border border-secondary border-top-0 rounded-bottom d-flex flex-column justify-content-between h-100">
                    <div>
                        <h4>Queen Bed Frame</h4>
                        <p>Elegant queen-sized bed with high-quality cushioning and wood frame.</p>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <p class="text-dark fs-5 fw-bold mb-0">RM 2,399.00</p>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="2" class="btn border border-secondary rounded-pill px-3 text-primary">
                            <i class="fa fa-shopping-bag me-2 text-primary"></i> Buy
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Card 3 -->
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="rounded position-relative fruite-item h-100">
                <div class="fruite-img">
                    <img src="img/dining set.jpg" class="img-fluid w-100 rounded-top" alt="Dining">
                </div>
                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">Dining</div>
                <div class="p-4 border border-secondary border-top-0 rounded-bottom d-flex flex-column justify-content-between h-100">
                    <div>
                        <h4>Dining Table Set</h4>
                        <p>Classic wooden table with 6 matching upholstered chairs.</p>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <p class="text-dark fs-5 fw-bold mb-0">RM 1,499.00</p>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="3" class="btn border border-secondary rounded-pill px-3 text-primary">
                            <i class="fa fa-shopping-bag me-2 text-primary"></i> Buy
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

        <!-- Fruits Shop End-->
<!-- Back to Top Button -->
<a href="#" class="btn btn-light border-3 border-white rounded-circle back-to-top">
    <i class="fa fa-arrow-up"></i>
</a>

