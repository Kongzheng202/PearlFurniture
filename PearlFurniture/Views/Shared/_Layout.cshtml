@using Microsoft.AspNetCore.Identity
@using PearlFurniture.Areas.Identity.Data
@inject SignInManager<PearlFurnitureUser> SignInManager
@inject UserManager<PearlFurnitureUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - PearlFurniture | Premium Home Living</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="PearlFurniture, home furniture, elegant design, sofa, table, chair, bed, interior">
    <meta name="description" content="PearlFurniture offers premium quality furniture for your perfect home. Explore our collection of elegant and modern designs.">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

    <!-- Your Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

</head>
<body>

    <!-- Topbar Start -->
    <div class="container-fluid bg-black text-white py-2 px-4 d-none d-lg-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <small class="me-3"><i class="fas fa-map-marker-alt me-2"></i> No.46, Lot 5250, Sungai Chua, Kajang</small>
            <small><i class="fas fa-envelope me-2"></i> furnigalleria.trading@gmail.com</small>
        </div>
        <div class="d-flex align-items-center">
            <a class="text-white me-3 text-decoration-none" href="#">Privacy Policy</a>
            <span class="text-white">/</span>
            <a class="text-white mx-3 text-decoration-none" href="#">Terms of Use</a>
            <span class="text-white">/</span>
            <a class="text-white ms-3 text-decoration-none" href="#">Sales and Refunds</a>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-black navbar-dark sticky-top p-0">
        <a asp-controller="Home" asp-action="Index" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
            <h2 class="m-0"><i class="fas fa-couch me-2"></i>PearlFurniture</h2>
        </a>
        <button class="navbar-toggler me-4" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-center" id="navbarCollapse">
            <div class="navbar-nav p-4 p-lg-0">
                <a asp-controller="Home" asp-action="Index" class="nav-item nav-link">Home</a>
                <a asp-controller="Home" asp-action="Shop" class="nav-item nav-link">Shop</a>
                <a asp-controller="Review" asp-action="Review" asp-route-productId="1" class="nav-item nav-link">Review</a>
                <a asp-controller="Home" asp-action="Contact" class="nav-item nav-link">Contact</a>
            </div>
        </div>

        <div class="d-flex align-items-center pe-4">
            <partial name="_LoginPartial" />
        </div>
    </nav>
    <!-- Navbar End -->
    <!-- Page Content -->

    <main role="main" class="main-content pb-3">
        @RenderBody()
    </main>



    <div class="container-fluid bg-black text-white-50 footer pt-5 mt-5">
        <div class="container py-5">
            <div class="pb-4 mb-4" style="border-bottom: 1px solid rgba(255, 255, 255, 0.2);">
                <div class="row g-4">
                    <div class="col-lg-3">
                        <a href="#">
                            <h1 class="text-white mb-0">PearlFurniture</h1>
                            <p class="text-secondary mb-0">Premium Home Living</p>
                        </a>
                    </div>
                    <div class="col-lg-6">
                        <div class="position-relative mx-auto">
                            <input class="form-control border-0 w-100 py-3 px-4 rounded-pill" type="email" placeholder="Your Email">
                            <button type="submit" class="btn btn-light border-0 py-3 px-4 position-absolute rounded-pill text-black" style="top: 0; right: 0;">Subscribe</button>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="d-flex justify-content-end pt-3">
                            <a class="btn btn-outline-light me-2 btn-md-square rounded-circle" href="#"><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-outline-light me-2 btn-md-square rounded-circle" href="#"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-light me-2 btn-md-square rounded-circle" href="#"><i class="fab fa-youtube"></i></a>
                            <a class="btn btn-outline-light btn-md-square rounded-circle" href="#"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <div class="footer-item">
                        <h4 class="text-light mb-3">About Us</h4>
                        <p class="mb-4">
                            PearlFurniture brings timeless elegance and premium quality to your home. From modern sofas to custom-crafted beds, our pieces are made to last.
                        </p>
                        <a href="#" class="btn border-secondary py-2 px-4 rounded-pill text-white">Read More</a>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="d-flex flex-column text-start footer-item">
                        <h4 class="text-light mb-3">Customer Service</h4>
                        <a class="btn-link text-white-50" href="#">Privacy Policy</a>
                        <a class="btn-link text-white-50" href="#">Terms & Conditions</a>
                        <a class="btn-link text-white-50" href="#">Return Policy</a>
                        <a class="btn-link text-white-50" href="#">FAQs & Help</a>
                        <a class="btn-link text-white-50" href="#">Shipping Info</a>
                        <a class="btn-link text-white-50" href="#">Contact Us</a>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="d-flex flex-column text-start footer-item">
                        <h4 class="text-light mb-3">My Account</h4>
                        <a class="btn-link text-white-50" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        <a class="btn-link text-white-50" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        <a class="btn-link text-white-50" href="#">Wishlist</a>
                        <a class="btn-link text-white-50" href="#">Order History</a>
                        <a class="btn-link text-white-50" href="#">Track Order</a>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="footer-item">
                        <h4 class="text-light mb-3">Contact Info</h4>
                        <p><i class="fas fa-map-marker-alt me-2"></i> No.46, Lot 5250, Sungai Chua, Kajang</p>
                        <p><i class="fas fa-envelope me-2"></i> furnigalleria.trading@gmail.com</p>
                        <p><i class="fas fa-phone-alt me-2"></i> +60 12-345 6789</p>
                        <p class="mt-3">Payment Accepted</p>
                        <img src="~/img/payment.png" class="img-fluid" alt="Payment Methods" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Copyright -->
    <div class="container-fluid copyright bg-black py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0 text-white-50">
                    <span>&copy; 2025 PearlFurniture. All rights reserved.</span>
                </div>
                <div class="col-md-6 text-center text-md-end text-white-50">
                    Designed by <a class="text-white" href="https://htmlcodex.com">HTML Codex</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Back to Top Button -->
    <a href="#" class="btn btn-light border-3 border-white rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>

    <script src="~/js/main.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>