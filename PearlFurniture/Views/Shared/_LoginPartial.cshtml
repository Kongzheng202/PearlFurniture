@using Microsoft.AspNetCore.Identity
@using PearlFurniture.Areas.Identity.Data

@inject SignInManager<PearlFurnitureUser> SignInManager
@inject UserManager<PearlFurnitureUser> UserManager

<ul class="navbar-nav d-flex flex-row align-items-center gap-2 mb-0">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello, @UserManager.GetUserName(User)!
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                <button id="logout" type="submit" class="btn btn-sm btn-warning">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-sm btn-outline-light" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-sm btn-light" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>

