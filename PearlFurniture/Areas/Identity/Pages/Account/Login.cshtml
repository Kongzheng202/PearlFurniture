@page
@model LoginModel

@{
    ViewData["NoLayout"] = true;
}


<div class="login-bg">
    <div class="login-container">
        <h2 class="text-center mb-4 fw-bold">Login</h2>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-group mb-3">
                <input asp-for="Input.Email" class="form-control login-input" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="Input.Password" class="form-control login-input" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mb-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label text-white" asp-for="Input.RememberMe">Remember me</label>
                </div>
                <a asp-page="./ForgotPassword" class="text-white small">Forgot password?</a>
            </div>

            <button id="login-submit" type="submit" class="btn btn-gradient w-100">LOGIN</button>

            <div class="text-center text-white my-3">Or sign in using</div>

            <div class="d-flex justify-content-center gap-3 mb-3">
                <a href="#" class="social-icon bg-primary"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="social-icon bg-info"><i class="fab fa-twitter"></i></a>
                <a href="#" class="social-icon bg-danger"><i class="fab fa-google"></i></a>
            </div>

            <div class="text-center text-white">
                <small>Don’t have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-underline text-white fw-bold">Sign up</a></small>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
